{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs", // ðŸ‘ˆ Important for CLI in Node
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "types": ["node"]
  },
  "include": [
    "src/calculator-cli.ts",
    "src/calculator.ts",
    "src/addition.ts",
    "src/division.ts",
    "src/multiplication.ts",
    "src/substraction.ts"
  ],
  "exclude": ["node_modules", "dist", "src/**/*.tsx"]
}
